<!doctype html>
<html lang="en">
<head>
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{{ title ?? entry.title }}</title>

    {# Compiled Favicons. Only does stuff in production environments as this
        isn't compiled when running locally. #}
    {{ craft.twigpack.includeFileFromManifest('webapp.html') }}

	{# JS from the Manifest. In production this will include both modern and
        legacy versions. #}
    {{ craft.twigpack.includeSafariNomoduleFix() }}
    {{ craft.twigpack.includeJsModule('app.js', true) }}

    {# CSS from the Manifest file in production, or webpack-dev-server in the
        development environment. #}
    {{ craft.twigpack.includeCssModule('app.css', true) }}
    {{ craft.twigpack.includeCssRelPreloadPolyfill() }}
</head>
<body>
    <h1>Dev Mode? {{ craft.config.devMode ? 'Yes' : 'No' }}</h1>

    {% block content %}{% endblock %}
</body>
</html>
